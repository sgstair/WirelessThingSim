<Window x:Class="SimpleWirelessSimualator.DebugViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWirelessSimualator"
        mc:Ignorable="d"
        Title="DebugViewer" Height="700" Width="1000">
    <Grid>
        <ScrollBar x:Name="scrollTime" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
        <ScrollViewer Margin="0,0,0,16.5">
            <Grid Margin="0">
                <StackPanel x:Name="deviceStack" Margin="0"/>
                <local:DebugPopup x:Name="popup" Margin="0"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
